#!/bin/bash

echo "üßπ Cleaning up project files..."

# Remove node_modules directory
if [ -d "node_modules" ]; then
    echo "Removing node_modules..."
    rm -rf node_modules
    echo "‚úÖ node_modules removed"
else
    echo "‚ÑπÔ∏è  node_modules not found"
fi

# Remove .next directory
if [ -d ".next" ]; then
    echo "Removing .next..."
    rm -rf .next
    echo "‚úÖ .next removed"
else
    echo "‚ÑπÔ∏è  .next not found"
fi

# Remove bun.lock file
if [ -f "bun.lock" ]; then
    echo "Removing bun.lock..."
    rm -f bun.lock
    echo "‚úÖ bun.lock removed"
else
    echo "‚ÑπÔ∏è  bun.lock not found"
fi

echo "üéâ Cleanup complete!"